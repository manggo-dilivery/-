@import "../../wxParse/wxParse.wxss";
page{
  background: #eee;
}

.top{
  width:100%;
  height:430rpx;
  background: #fff;
}
.top image{
  width:100%;
}
.top text{
  margin-left:20rpx;
  font-weight: bold;
  font-size:35rpx;
  color:#777;
}
/*中部价格  */
.middle{
  width:100%;
  height:120rpx;
  background: #fff;
  margin-top:20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.middle-detail text:first-child{
  font-size:30rpx;
  color:#cc2201;
  margin-left:20rpx;
}
.middle-detail text:nth-child(2){
  font-size:50rpx;
  color:#cc2201;
  margin-left:5rpx;
}
.middle-detail text:nth-child(3){
  font-size:30rpx;
  color:#cc2201;
  margin-left:5rpx;
}
.middle-detail text:nth-child(4){
  font-size:30rpx;
  color:#999;
  text-decoration: line-through;
  margin-left:5rpx;
}
.immediate button{
  width:180rpx;
  font-size:30rpx;
  background: #cc2201;
  color:white;
  margin-right:30rpx;
}
/*中加助学  */
.details{
  width:100%;
  height:auto;
  background: #fff;
  margin-top:20rpx;
}
.details-title{
  font-size:35rpx;
  margin-left:30rpx;
  display: flex;
  align-items: center;
  height: 100rpx;
}
.details-title image{
  width:40rpx;
  height:40rpx;
}
.details-content{
  display:flex;
  align-items: center;
  width:100%;
  height:80rpx;
}
.details-content image{
  width:30rpx;
  height:40rpx;
}
.details-content text{
  font-size:28rpx;
  margin-left:15rpx;
}
.details-content image:first-of-type{
  margin-left:30rpx;
}
.border{
  width:100%;
  border-top:1rpx solid #eee;
}


/*底部导航 */
.image{
  width:100%;
  height:430rpx;
  padding-bottom:120rpx;
  background: #fff;
}
.image image{
  width:100%;
  height:430rpx;
}
.bottom{
  width:100%;
  height:90rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left:0;
  border-top:1rpx solid #eee;
}
.bottom image{
  width:35rpx;
  height:35rpx;
}
.bottom text{
  font-size:30rpx;
  margin-left:10rpx;
}
.bottom view{
  display: flex;
  align-items: center;
}
.bottom button{
  font-size:30rpx;
  width:300rpx;
  background: #ff9e05;
  color:#fff;
  position:relative;
  left:15rpx;
}
.bottom_btn{
width:150rpx !important;
height:auto;
background: #fff !important;
color:#222 !important;
padding: 0;
display: flex;
align-items: center;
}
.bottom_btn::after{
border:none;
outline: none;
} 
.bottom_btn image{
margin-right:10rpx;
}