/* pages/teacher_detail/teacher_detail.wxss */
.title{
  width:100%;
  height:140rpx;
  border-bottom:1rpx solid #ddd;
  display: flex;
  flex-direction: column;
}
.title text:first-child{
  font-size: 34rpx;
  margin:20rpx 30rpx 20rpx 30rpx;
  color:#666;
  font-weight: bold;
}
.title text:last-child{
  font-size: 26rpx;
  margin:0rpx 30rpx;
}

/*详情  */
.detail{
  display: flex;
  flex-direction: column;
}
.detail text{
  font-size:29rpx;
  color:#666;
  line-height:50rpx;
  margin-left:30rpx;
  margin-right:30rpx;
  text-align: justify;
}
.detail text:first-child{
  margin-top:30rpx;
}

/*照片  */
.image{
  width:100%;
  height:auto;
  margin-top:20rpx;
  margin-bottom:40rpx;
}
.image image{
  width:700rpx;
  height:700rpx;
  display: block;
  margin:0 auto;
  margin-top:10rpx;
}