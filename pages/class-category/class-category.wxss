/* pages/class-category/class-category.wxss */
page{
  color:#eee;
}
text{
  color: #777;
  font-size:24rpx !important;
}
.container{
  width:100%;
  height:100%;
  display: flex;
}
.top-tab{
  width:180rpx;
  height:auto;
  display: flex;
  text-align: center;
  flex-direction: column;
}
.top-tab view{
  width:180rpx;
  height:100rpx;
  text-align: center;
}
.top-tab text{
  font-size: 30rpx;
  line-height: 100rpx;
  color:#444;
}
.indent{
  width:13rpx;
  height:100%;
  background: #eee;
  position: fixed;
  top:0;
  left:181rpx;
}
/*列表  */
.item-left image{
  width:240rpx;
  height:240rpx;
  display: block;
  margin:0 auto;
}
.item-left text{
  width:220rpx;
  text-align: center;
  display: block;
  margin:0 auto;
  margin-top:15rpx;
  font-size:26rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color:#babbbd;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    line-height: 80rpx;
    }
.selected{
    width: 100%;  
    line-height: 80rpx;
    height:80rpx;
    color:#2fd8ad !important;
}
.tabs-item{
  font-size:26rpx;
  color:#333;
  border-bottom:1rpx solid #eee;
  line-height:100rpx;
}
.class-category-list{
  display: flex;
  flex-wrap: wrap;
  padding-left:10rpx;
}
.list{
  margin-top:20rpx;
  margin-left:20rpx;
}
.item{
  margin-left:26rpx;
  margin-top:25rpx;
}