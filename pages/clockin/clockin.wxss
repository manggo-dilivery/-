/* pages/clockin/clockin.wxss */

.container{
  width:100%;
  height:auto;
}
.top{
  width:90%;
  height:auto;
  margin:0 auto;
  margin-top:20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.top-image{
  display: flex;
  align-items: center;
}
.top-image > image{
  width:100rpx;
  height:100rpx;
  border-radius:50rpx;
}
.top-image view view > image{
  width:30rpx;
  height:30rpx;
} 
.top-text{
  margin-left:20rpx;
}
.top-text text{
  font-size:32rpx;
}
.top-text view text{
  font-size:26rpx;
  margin-left:10rpx;
}
.top-text view{
  display: flex;
  align-items: center;
  margin-top:15rpx;
}
.top-card text{
  font-size:30rpx;
  padding: 8rpx 25rpx;
  border:2rpx solid #fb5b4d;
  color:#fb5b4d;
  border-radius:30rpx;
}

.middle{
  background: #fff;
  width:95%;
  height:360rpx;
  margin:0 auto;
  display: flex;
  align-items: center;
}
.middle-card{
  width:220rpx;
  height:220rpx;
  margin:0 auto;
  background: linear-gradient(#99b5ff, #3573ff);
  border-radius:110rpx;
  box-shadow:0 0 0 8rpx #e4edfe;
  text-align: center;
}
.middle-card text{
  line-height:210rpx;
  font-size:35rpx;
  font-weight: bold;
  color:#fff;
}

.detail{
  background: #f6f6f6;
  width:100%;
  height:100rpx;
}
.detail text{
  margin-left:30rpx;
  line-height:100rpx;
  font-size:32rpx;
  color:#666;
}

.list{
  width:100%;
  height:90rpx;
  border-bottom:1rpx solid #eee;
}
.list text{
  font-size:28rpx;
  color:#444;
  line-height: 90rpx;
}
.list text:first-child{
  margin-left:30rpx;
}
.list text:nth-child(2){
  margin-left:10rpx;
}
.list text:nth-child(3){
  margin-left:10rpx;
}
.list text:nth-child(4){
  color:#fc614f;
}
