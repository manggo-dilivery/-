/* pages/contact/contact.wxss */

.top{
  width:100%;
  height:auto;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.top image{
  width:100%;
  height:380rpx;
}
.top text{
  font-size:30rpx;
  color:#fc73a1;
  border-bottom:1rpx solid #fc73a1;
  padding:50rpx 40rpx 10rpx 40rpx;
}
/*学校简介内容  */
.instruct{
  padding:0 30rpx;
}
.instruct text:first-of-type{
  font-size:30rpx;
  color:#666;
  line-height: 1;
  padding: 0;
}
/*两条列表  */

.item{
  display:flex;
  margin-top:15rpx;
  align-items: center;
}
.item image{
  width:30rpx;
  height:30rpx;
  margin-left:15rpx;
}
.item text{
  margin-left:20rpx;
}
@import "../../wxParse/wxParse.wxss";
