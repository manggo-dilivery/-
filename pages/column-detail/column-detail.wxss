/* pages/teacher_detail/teacher_detail.wxss */

@import "../../wxParse/wxParse.wxss";
.top-title{
  width:90%;
  height:auto;
  margin:0 auto;
  font-size:37rpx;
  font-weight: bold;
  color:#555;
}
.browse{
  width:90%;
  height:auto;
  margin:0 auto;
  font-size:28rpx;
  color:#888;
  margin-top:30rpx;
}
.image{
  width:90%;
  height:auto;
  margin:0 auto;
  margin-top:30rpx;
  display: flex;
  align-items: center;
}
.image image{
  width:80rpx;
  height:80rpx;
  border-radius:40rpx;
}
.image text{
  margin-left:20rpx;
  font-size:30rpx;
  color:#16ba86;
}
.items{
  width:100%;
  height:270rpx;
}
.paragraph{
  font-size:30rpx;
  color:#444;
  margin:0 auto;
  margin-top:30rpx;
  display: block;
  width:90%;
  height:auto;
}
.content-bottom{
  width:90%;
  height:auto;
  margin:0 auto;
}
.content-bottom text{
  font-size:30rpx;
  color:#444;
  margin-top:20rpx;
}
.content-bottom text:nth-child(2){
  color:#16ba86;
}

.comment-title{
  width:200rpx;
  margin:0 auto;
  text-align: center;
  margin-top:40rpx;
}
.border{
  width:80rpx;
  height:2rpx;
  margin:0 auto;
  margin-top:20rpx;
  border-top:8rpx solid #ffadbd;
}
.list{
  width:90%;
  height:auto;
  margin:0 auto;
  display: flex;
}
.list > image{
  width:90rpx;
  height:90rpx;
  border-radius:45rpx;
}
.item-left image{
  width:40rpx;
  height:40rpx;
}
.item-right image{
  width:40rpx;
  height:40rpx;
}